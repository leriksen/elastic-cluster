{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "cluster_size": {
      "type": "string"
    },
    "sku_name": {
      "type": "string"
    },
    "sku_tier": {
      "type": "string"
    },
    "availability_zone": {
      "type": "string"
    },
    "administrator_login": {
      "type": "string"
    },
    "administrator_login_password": {
      "type":  "string"
    },
    "password_auth": {
      "type":  "string"
    },
    "backup_retention_days": {
      "type": "string"
    },
    "geo_redundant_backup":{
      "type": "string"
    },
    "active_directory_auth": {
      "type": "string"
    },
    "ha_mode": {
      "type": "string"
    },
    "standby_availability_zone": {
      "type": "string"
    },
    "storage_autogrow": {
      "type": "string"
    },
    "storage_size_gb": {
      "type": "string"
    },
    "network": {
      "type": "object",
      "defaultValue": {}
    },
    "tenant_id": {
      "type": "string"
    },
    "principal_name": {
      "type": "string"
    },
    "principal_type": {
      "type":  "string"
    },
    "principal_id": {
      "type":  "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2025-01-01-preview",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku_name')]",
        "tier": "[parameters('sku_tier')]"
      },
      "properties": {
        "authConfig": {
          "activeDirectoryAuth": "[parameters('active_directory_auth')]",
          "passwordAuth":        "[parameters('password_auth')]",
          "tenantId":            "[parameters('tenant_id')]"
        },
        "availabilityZone":           "[parameters('availability_zone')]",
        "backup": {
          "backupRetentionDays": "[parameters('backup_retention_days')]",
          "geoRedundantBackup":  "[parameters('geo_redundant_backup')]"
        },
        "cluster": {
          "clusterSize": "[parameters('cluster_size')]"
        },
        "createMode":                 "Default",
        "highAvailability": {
          "mode":                    "[parameters('ha_mode')]",
          "standbyAvailabilityZone": "[parameters('standby_availability_zone')]"
        },
        "network": "[if(empty(parameters('network')), json('null'), parameters('network'))]",
        "storage": {
          "StorageSizeGB": "[parameters('storage_size_gb')]",
          "Autogrow":      "[parameters('storage_autogrow')]"
        },
        "version":                    "[parameters('version')]"
      }
    },
    {
      "type":       "Microsoft.DBforPostgreSQL/flexibleServers/administrators",
      "apiVersion": "2025-01-01-preview",
      "name":       "[concat(parameters('name'), '/', parameters('principal_id'))]",
      "properties": {
        "principalName": "[parameters('principal_name')]",
        "principalType": "[parameters('principal_type')]",
        "tenantId":      "[parameters('tenant_id')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('name'))]"
      ]
    }
  ]
}